<div class="column is-4 is-offset-4">
  <div class="card has-background-grey-lighter">
    <div class="card-header">
        <p class="card-header-title is-size-4">
          Entrar
        <p>
      </div>
      <div class="card-content has-text-white">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <!--Email-->
          <div class="field">
            <%= f.label :email, class: "label" %>
              <div class="control">
                <%= f.text_field :email, autofocus: true, autocomplete: "email", class:"input", placeholder: "Email" %>
              </div>
          </div>
          <!--Senha-->
          <div class="field">
            <%= f.label :password, class: "label" %>
            <div class="control">
            <%= f.password_field :password, autocomplete: "current-password", class:"input", placeholder: "Senha"  %>
            </div>
          </div>
          <!--Lembrar-->
          <% if devise_mapping.rememberable? %>
            <div class="field">
            <div class="control">
              <%= f.check_box :remember_me, class: "lable" %>
              <%= f.label :remember_me, class: "checkbox" %>
              </div>
            </div>
          <% end %>
          <div class="field is-grouped is-right">
            <div class="control">   
              <%= link_to "Log in", new_session_path(resource_name), class: "button is-black" %>
            </div>
            <div class="control">
                <%= link_to "Cadastre-se", new_registration_path(resource_name), class: "button is-dark" %>
            </div>
            <div class="control">   
              <%= link_to "Esqueceu a senha?", new_password_path(resource_name), class: "button is-warning" %>
            </div>
          </div>
      <%end%>
      </div>
    </div>   
  </div>
</div>