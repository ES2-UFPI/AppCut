<%= content_for :brand do %>
  <% if @user.professional_profile.logo.present? %>
    <%= image_tag @user.professional_profile.logo %>
  <% else %>
    <%= icon("fas", "user", class: "has-text-white-ter") %>
  <% end %>
<% end %>

<%= content_for :title do %>
  <div class="contact-header">
    <div class="name">
      <%= @user.name %>
    </div>
    <div class="status">
      Online
    </div>
  </div>
<% end %>

<div class="message-container">
  <%= render @messages %>

  <footer class="send-message has-background-black">
    <div class="container">
      <%= form_with url: chat_messages_path(@user), local: false do |f| %>
        <div class="columns is-mobile is-vcentered">
          <div class="column is-four-fifths">
            <div class="fields">
              <%= f.text_area "message[content]", class: "textarea", rows: 1, style: "resize: none" %>
            </div>
          </div>
          <div class="column is-one-fifth has-text-centered">
            <%= button_tag class: "button is-info is-rounded has-text-white-ter" do %>
              <%= icon("fas", "circle-arrow-right") %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </footer>
</div>
